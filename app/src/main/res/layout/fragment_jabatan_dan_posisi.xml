<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.JabatanDanPosisiFragment">

    <include
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rv_nip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_personal_data">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIP"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_nip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow1"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_nama"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_gelar_depam">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow2"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_tempat_lahir"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_gelar_belakang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempat Lahir"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_tempat_lahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow3"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_tanggal_lahir"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_tempat_lahir">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_tanggal_lahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow4"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_skpd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_tanggal_lahir">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKPD"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_skpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow5"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_parents"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_jenis_kelamin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parents"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_parents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow6"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_jabatan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jabatan"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/arrow8"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_alamat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:layout_toStartOf="@id/arrow9"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_no_hp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No HP"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_no_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:layout_toStartOf="@id/arrow10"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_tmt_jabatan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tmt Jabatan"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_tmt_jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:layout_toStartOf="@id/arrow14"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_jenis_jabatan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Jabatan"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_jenis_jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:layout_toStartOf="@id/arrow11"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_masa_kerja"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/retangle_stroke"
                android:padding="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/rv_status_perkawinan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masa Kerja"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_masa_kerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:text="-"
                    android:layout_toStartOf="@id/arrow12"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/arrow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vector" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>