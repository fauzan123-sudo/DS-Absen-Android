<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradiend_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.EditProfileFragment">

   <include
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/toolbar"
       layout="@layout/toolbar_layout"/>

   <RelativeLayout
       android:id="@+id/rv_edit_profile"
       app:layout_constraintTop_toBottomOf="@id/toolbar"
       android:background="@color/white"
       android:layout_margin="@dimen/_20sdp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/txt_edit"
          android:text="NIP"
          android:paddingVertical="@dimen/_10sdp"
          android:paddingStart="@dimen/_15sdp"
          android:textColor="#7F838B"
          android:textSize="@dimen/_12sdp"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:ignore="RtlSymmetry" />

      <EditText
          android:id="@+id/edt_profile"
          android:layout_toEndOf="@id/txt_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:paddingEnd="@dimen/_15sdp"
          android:textSize="@dimen/_12sdp"
          android:layout_marginVertical="@dimen/_10sdp"
          android:textAlignment="textEnd"
          android:layout_centerVertical="true"
          android:hint="NIP"
          tools:ignore="RtlSymmetry" />

      <Button
          android:visibility="gone"
          android:id="@+id/btn_ubah_tanggal"
          android:layout_toEndOf="@id/txt_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#00FFFFFF"
          android:textAlignment="textEnd"
          tools:ignore="RtlSymmetry" />

   </RelativeLayout>

   <include
       android:visibility="gone"
       android:id="@+id/noInternetConnection"
       layout="@layout/fake"
       />

   <include
       android:id="@+id/loading_include"
       android:visibility="gone"
       layout="@layout/loading"
       />
</androidx.constraintlayout.widget.ConstraintLayout>